  <script>
    const editableIds = [
      'businessName','heroLead','phoneDisplay','metaWalkins','metaPayment',
      'aboutText','priceTrim','descTrim','priceFade','descFade',
      'mon','tue','wed','thu','fri','sat','sun',
      'contactPhone','contactEmail','addressLine','addressCity',
      'locationNote','mapAddressLabel'
    ];

    const toggle = document.getElementById('toggleEdit');
    let editing = false;

    function loadSaved(){
      editableIds.forEach(id=>{
        const el = document.getElementById(id);
        if(!el) return;
        const saved = localStorage.getItem('oskar_'+id);
        if(saved !== null){
          el.innerText = saved;
        }
      });
      document.getElementById('year').innerText = new Date().getFullYear();
      const businessName = document.getElementById('businessName')?.innerText || 'OskarBlends';
      document.getElementById('footerName').innerText = businessName;
      const phoneDisplay = document.getElementById('phoneDisplay')?.innerText || '';
      const callLink = document.getElementById('callLink');
      if(callLink && phoneDisplay){
        const digits = phoneDisplay.replace(/\s+/g,'');
        callLink.href = 'tel:'+digits;
      }
    }

    function saveAll(){
      editableIds.forEach(id=>{
        const el = document.getElementById(id);
        if(!el) return;
        localStorage.setItem('oskar_'+id, el.innerText.trim());
      });
    }

    function setEditingState(isEditing){
      editableIds.forEach(id=>{
        const el = document.getElementById(id);
        if(!el) return;
        if(isEditing){
          el.setAttribute('contenteditable','true');
          el.setAttribute('data-editing','true');
        }else{
          el.removeAttribute('contenteditable');
          el.removeAttribute('data-editing');
        }
      });
      toggle.dataset.editing = isEditing ? 'true' : 'false';
      toggle.setAttribute('aria-pressed', isEditing ? 'true' : 'false');
      toggle.querySelector('span:last-child').innerText = isEditing ? 'Save changes' : 'Edit content';
    }

    toggle.addEventListener('click', ()=>{
      editing = !editing;
      if(!editing){
        saveAll();
        loadSaved();
      }
      setEditingState(editing);
    });

    window.addEventListener('beforeunload', saveAll);
    window.addEventListener('DOMContentLoaded', ()=>{
      loadSaved();
      setEditingState(false);
    });

    const mapSquare = document.getElementById('mapSquare');
    const mapOpenLink = document.getElementById('mapOpenLink');

    const mapsQuery = encodeURIComponent('24 Rue Charles Bernhoeft, Luxembourg');
    const mapsUrl = 'https://www.google.com/maps/search/?api=1&query=' + mapsQuery;

    function openMaps(){
      window.open(mapsUrl, '_blank');
    }

    mapSquare.addEventListener('click', openMaps);
    mapOpenLink.addEventListener('click', (e)=>{
      e.preventDefault();
      openMaps();
    });
  </script>
</body>
